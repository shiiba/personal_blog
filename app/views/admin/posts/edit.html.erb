<h1>Edit Post</h1>

<%= form_for @post, url: admin_post_path(@post), html: { method: :put } do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <%= f.label :body, "Post Body" %>
  <%= f.text_area :body %>
  <%= f.label :published, "Published?" %>
  <%= f.check_box :published %>
  <%= f.submit %>
<% end %>

<%= link_to 'Admin Index', admin_posts_path %>
